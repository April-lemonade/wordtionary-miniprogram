/**index.wxss**/
.container {
  width: 90%;
  height: 100%;
  margin: 5%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  margin-bottom: 100px;
}

.example-search {
  background-color: #fff;
  padding: 16rpx 32rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.card {
  margin: 5% 10%;
  height: 80%;
  width: 80%;
  border-style: solid;
  border-color: white;
  border-radius: 5%;
  box-shadow: 3px 3px 10px #dddddd, -3px -3px 10px #dddddd;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word {
  font-size: 40px;
  margin: 5%;
  font-weight: bold;
  color: #0052d9;
}

.soundmark {
  display: flex;
  flex-direction: row;
  /* font-size: 15px; */
  color: #aaa;
}

.bri_soundmark {
  margin-right: 5%;
}