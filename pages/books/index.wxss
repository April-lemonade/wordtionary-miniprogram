.container {
  width: 90%;
  height: 100%;
  margin: 5%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  /* box-sizing: border-box; */
  margin-bottom: 100px;
}

.nowlist {
  font-size: 18px;
  margin: 2%;
}

.dailytask {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 3%;
}

.predict {
  width: 94%;
  margin: 3%;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  font-size: 15px;
}

.boldfont {
  margin-right: 5%;
  color: #0052d9;
  font-weight: bold;
}

.changeList {
  width: 100%;
}

.card {
  position: relative;
  margin: 3rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid #fff;
}

.card--active {
  border-color: #0052d9;
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid #0052d9;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 4;
}